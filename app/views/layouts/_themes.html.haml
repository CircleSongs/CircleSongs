- max_count = themes.max_by(&:taggings_count)&.taggings_count || 1
%section.panel.panel--themes.themes{"aria-label" => "Song themes"}
  %h2.panel__title.ruled
    Song Themes
  .themes-cloud{"aria-label" => "Theme cloud"}
    - themes.each do |theme|
      = link_to theme.name, songs_path(q: { themes_name_in: theme.name }), style: "font-size: #{theme_font_size(theme.taggings_count, max_count)}%"
