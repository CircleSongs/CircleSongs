= search_form_for @q do |f|
  .row
    .col-4.offset-2
      %strong Category
      = f.input :categories_id_in, as: :check_boxes, collection: Category.all, label: false
    .col-5
      %strong Language
      = f.input :languages_id_in, as: :check_boxes, collection: Language.all, label: false
  .row
    .col-8.offset-2
      .input-group
        = f.input_field :title_cont, class: 'form-control', placeholder: 'Search titles...'
        .input-group-append
          = f.button :submit, class: 'btn btn-primary'
          = link_to 'Clear', songs_path, class: 'btn btn-secondary'

  .row.alpha-search
    .col-8.offset-2.d-flex.flex-row.justify-content-between
      - ('A'..'Z').each do |letter|
        = link_to letter, songs_path(q: { title_start: letter })
.row
  .col
    %h1 Songs!
    %ul.songs
      - @songs.each do |song|
        %li
          = link_to song.title, song
