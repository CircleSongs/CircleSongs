= search_form_for @q do |f|
  .row
    .col-sm-2.offset-sm-2
      = f.input :categories_id_in, collection: @categories, input_html: { class: 'custom-select' }, prompt: 'All', label: 'Category', required: false, label_method: :name_and_count
    .col-sm-2
      = f.input :languages_id_in, collection: Language.all, input_html: { class: 'custom-select' }, prompt: 'All', label: 'Language', required: false
    .col-sm-2
      = f.input :chords_present, collection: [['Yes', true], ['No', false]], include_blank: 'All', label: 'Has Chords', required: false, input_html: { class: 'custom-select' }
    .col-sm-2
      = f.input :s, collection: [['Title', 'title asc'], ['Date Added', 'created_at desc']], label: 'Sort by', required: false, include_blank: false, selected: songs_sort_value, input_html: { class: 'custom-select' }

  .row
    .col-sm-8.offset-sm-2
      .input-group
        = f.input_field :title_cont, class: 'form-control', placeholder: 'Search titles...'
        .input-group-append
          = f.button :submit, class: 'btn btn-primary'
          = link_to 'Clear', songs_path, class: 'btn btn-secondary'

  .row
    .col-sm-8.offset-sm-2
      = paginate @songs
.row
  .col-sm-12
    %ul.songs
      - if @songs.empty?
        %li= t 'songs.no_songs'
      - else
        - @songs.each do |song|
          %li
            = link_to song.title, song
